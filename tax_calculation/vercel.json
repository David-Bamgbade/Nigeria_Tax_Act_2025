{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/calculate_pit",
      "dest": "api/app.py"
    },
    {
      "src": "/calculate_cit",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}